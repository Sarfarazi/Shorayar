@model IEnumerable<Council.Core.Models.NoteLetterViewModel>
@using Council.UI.Helpers;
@using Council.Core
@using Microsoft.AspNet.Identity;
@using Council.Service;
@{
    var comNumber = 1;
    var publicMethod = new PublicMetods();
}

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-6 text-right">یادداشت شماره : @(comNumber++)</div>

            <div class="col-md-6 text-left">
                <span class="noteDate"> @(publicMethod.ConvertToJalali(item.CreatedOn)) <span class="noteTime">&nbsp; &nbsp;@(item.CreatedOn.Hour.ToString() + ':' + item.CreatedOn.Minute.ToString())  </span>  </span>
                    
            </div>
        </div>
        <div class="row">
            <div class="NoteText col-md-12">@(item.FirstName+" "+item.LastName) : @(item.ContentText)</div>
        </div>
        <hr />
    }
}