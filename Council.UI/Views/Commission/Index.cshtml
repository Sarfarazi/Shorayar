@model Council.Core.Entities.Commission

@{
    ViewBag.Title = "کمیسیون ها";
    var commissions = ViewBag.Commissions as List<Council.Core.Entities.Commission>;
    var members = ViewBag.Members as List<Council.Core.Entities.User>;
}

<div class="card">
    <div class="card-header">
        ثبت کمیسیون
    </div>
    @using (Html.BeginForm())
    {
        <div class="card-body">
            @if (TempData["message"] != null)
            {
                <div class="row form-group">
                    <div class="col-lg-7 col-md-7 col-sm-12 col-12">
                        @{var message = (Council.Core.Models.ShowMessage)TempData["message"];}
                        <div class="alert @message.MessageType"><span class="closebtn">×</span>@message.Message</div>
                    </div>
                </div>
            }

            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true)

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="row form-group">
                            @Html.LabelFor(model => model.Name, new { @class = "control-label col-lg-3 col-md-3 col-sm-6 col-12" })
                            <div class="col-lg-9 col-md-9 col-sm-6 col-12">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="row form-group">
                            <label class="control-label col-lg-3 col-md-3 col-sm-6 col-12" for="chairManID">رئیس کمیسیون</label>
                            <div class="col-lg-9 col-md-9 col-sm-6 col-12">
                                <select class="text-box single-line form-control" name="chairManID">
                                    @foreach (var item in members)
                                    {
                                        <option value="@item.ID">@(item.FirstName + " " + item.LastName)</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                        <div class="row">
                            @Html.LabelFor(model => model.Tittle, new { @class = "control-label col-lg-3 col-md-3 col-sm-6 col-12" })
                            <div class="col-lg-9 col-md-9 col-sm-6 col-12">
                                @Html.EditorFor(model => model.Tittle, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Tittle, null, new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" value="ثبت" class="btn btn-sm btn-success" />
        </div>
      }
</div>

@if (commissions.Any())
{
    <div class="card">
        <div class="card-header">
            کمیسون های تعرف شده
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-condensed table-hover  table-striped">
                    <thead>
                        <tr>
                            <td>
                                نام
                            </td>
                            <td>
                                رئیس کمیسیون
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in commissions)
                        {
                            var chairMan = item.CommissionChairman;
                            <tr>
                                <td>@item.Name</td>
                                <td>@(chairMan != null ? chairMan.FirstName + " " + chairMan.LastName : "انتخاب نشده")</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "Commission", new { ID = item.ID })" title="ویرایش">
                                        ویرایش
                                    </a>
                                    <a class="btn btn-sm btn-flickr" href="@Url.Action("CommissionMembers", "Commission", new { ID = item.ID })" title="اعضای کمیسیون">
                                        اعضای کمیسیون
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
