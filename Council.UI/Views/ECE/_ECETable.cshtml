@model Council.Core.Models.PagedData<Council.Core.Models.POPEmail>
<div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped ">
        <thead>
            <tr>
                <th>#</th>
                <th>فرستنده</th>
                <th>آدرس فرستنده</th>
                <th>گیرنده</th>
                <th>تاریخ</th>
                @*<th>ضمائم</th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{int index = 1;}
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@(index++)</td>
                    <td>@Html.Raw(item.From)</td>
                    <td>@item.FromEmail</td>
                    <td>@item.To</td>
                    <td>@Council.Utility.DateTimeConvert.DateTimeConvert.PersianNumDateWithHours(item.DateSent)</td>
                    @*<td class="email-file">
                        @if (item.Attachments != null)
                        {
                            <ul>
                                @foreach (var file in item.Attachments)
                                {
                                    <li>
                                        <a href="javascript:;" onclick="GetFile(@item.MessageNumber , '@file.FileId')" title="@file.FileName"><i class="fa fa-download"></i> @file.FileName</a>
                                    </li>
                                }
                            </ul>
                            if (item.Attachments.Count() > 1)
                            {
                                <div>
                                    <a href="javascript:;" onclick="GetZipFile(@item.MessageNumber)" title="دریافت فایل ها به صورت فشرده"><i class="fa fa-file-archive-o"></i> دریافت فایل ها به صورت فشرده</a>
                                </div>
                            }
                        }
                    </td>*@
                    <td>
                        <div class="dropdown drp-action">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                <span class="caret"></span>
                                عملیات
                            </button>
                            <ul class="dropdown-menu" style="display: none;">
                                <li>
                                    <a href="@Url.Action("Details","ECE", new { id = item.MessageNumber})">
                                        <i class="fa fa-folder-open text-info"></i> جزییات
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Delete","ECE", new { id = item.MessageNumber})">
                                        <i class="fa fa-trash text-danger"></i> حذف
                                    </a>
                                </li>
                            </ul>
                        </div>                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="pagination_wrapper">
    <ul class="pagination">
        @for (int i = 1; i <= Model.NumberOfPages; i++)
        {
            var title = "صفحه " + i;
            <li>
                <a title='@title' class='page-number @((Model.CurrentPage == 0 && i==1) ? "current" : "")' href="javascript:void();">@i</a>
            </li>
        }
    </ul>
</div>

