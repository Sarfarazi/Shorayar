@model IEnumerable<Council.Core.Models.DraftViewModel>
@using Council.UI.Helpers;
@{
    ViewBag.Title = "پیش نویس ها";
}

<a href="~/Draft/Create" class="btn btn-default noRadius marginBottom5 padding10">
    <i class="glyphicon glyphicon-file"></i>
    ایجاد پیش نویس
</a>
<div class="customDiv">
    @if (Model != null && Model.Count() > 0)
    {
        <h4>پیش نویس های من</h4><hr />
        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <tr>
                    <td>@Html.LabelFor(model => model.First().Title)</td>
                    <td>@Html.LabelFor(model => model.First().Content)</td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@Html.ContentSubstring(item.Content, 200)</td>
                        <td>
                            @Html.ActionLink("نمایش", "Display", new { id = item.ID }, new { @class = "btn btn-sm btn-default" })
                            @Html.ActionLink("حذف", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <h4>پیش نویسی وجود ندارد</h4>
    }
</div>