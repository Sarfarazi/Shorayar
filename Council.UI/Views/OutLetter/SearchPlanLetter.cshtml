@model IEnumerable<Council.Core.Models.LowPlansModel>
@using Council.UI.Helpers;
@{
    ViewBag.Title = "جستجو";   
}
<div class="customDiv">
            <a href="/OutLetter/ShowPlanLawsLetters">برگشت</a>
            <hr />
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
                    <thead>
                        <tr>
                            <td>
                                ردیف
                            </td>
                            <td>
                                موضوع نامه
                            </td>
                            <td>
                                شماره نامه
                            </td>
                            <td>نوع نامه</td>
                            <td>
                                تاریخ
                            </td>
                            <td>
                                دریافت کننده
                            </td>

                            @*<td>
                    شماره زونکن بایگانی
                </td>*@

                        </tr>
                    </thead>
                    <tbody>
                        @{
                                var rowNumber = 0;
                                foreach (var item in Model)
                                {
                                <tr>

                                    <td class="text-center"><span id="rowNumber">@(++rowNumber + Convert.ToInt32(ViewBag.PlanPageNumber))</span></td>
                                    <td style="width: 35%">
                                        @Html.DisplayFor(modelItem => item.Title)
                                        <input id="LetterPageNumber" type="hidden" value="1" />
                                        <input id="LetterCount" type="hidden" value="@ViewBag.LetterCount" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OutLetterNumber)
                                    </td>
                                    <td class="letterStatusTd">
                                        @{
                                            if (item.TypeLetter == 1)
                                            {
                                                <span class="lawLetter">لایحه</span>
                                            }
                                            else
                                            {
                                                <span class="planLetter">طرح</span>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @Html.GetPersianDate(item.OutLettersCreatedOn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrganName)
                                    </td>
                                    <td style="width: 80px;">
                                        @Html.ActionLink("نمایش", "DisplaySendLetter", "OutLetter", new { letterID = item.OutLetterId }, new { @class = "btn btn-success" })
                                    </td>
                                    <td style="width: 130px;">
                                        <a href="#">ارسال بصورت ECE</a>
                                    </td>

                                </tr>
                               }
                        }
                        
                    </tbody>
                </table>
            }
            else
            {
                <text>نامه ای یافت نشد</text>
            }

        
</div>

