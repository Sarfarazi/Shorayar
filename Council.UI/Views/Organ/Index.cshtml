@model Council.Core.Entities.Organ

@{

    ViewBag.Title = "ثبت سازمان/شخص";
    var organs = ViewBag.Organs as List<Council.Core.Entities.Organ>;
}

<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-12">
        <div class="card">
            <div class="card-header">
                ثبت سازمان/شخص
            </div>
            @using (Html.BeginForm("Create", "Organ", FormMethod.Post, new { id = "OrganForm" }))
            {
                <div class="card-body">
                    @if (TempData["message"] != null)
                    {
                        var message = (Council.Core.Models.ShowMessage)TempData["message"];
                        <div class="alert @message.MessageType"><span class="closebtn">×</span>@message.Message</div>
                    }
                
                    <input type="hidden" name="ID" value=@(Model != null ? Model.ID : "") />

                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()

                    <div class="row form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3 col-sm-12 col-12" })
                        <div class="col-lg-9 col-md-9 col-sm-12 col-12">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3 col-sm-12 col-12" })
                        <div class="col-lg-9 col-md-9 col-sm-12 col-12">
                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Code, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3 col-sm-12 col-12" })
                        <div class="col-lg-9 col-md-9 col-sm-12 col-12">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-lg-3 col-md-3 col-sm-12 col-12" })
                        <div class="col-lg-9 col-md-9 col-sm-12 col-12">
                            @Html.TextAreaFor(model => model.Address, 2, 10, new { @class = "form-control textArea-height" })
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="ثبت" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>

@if (organs.Any())
{
    <div class="card">
        <div class="card-header">
            سازمان/اشخاص
        </div>
        <div class="card-body">
            <div class="row form-group">
                <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                    <input type="text" id="organSearch" class="form-control" placeholder="جستجو" />
                </div>
            </div>            
            <div class="table-responsive">
                <table class="table table-bordered table-condensed table-hover table-striped organTable ">
                    <thead>
                        <tr>
                            <td>
                                نام سازمان/شخص
                            </td>
                            <td>
                                کد 
                            </td>
                            <td>
                                ایمیل
                            </td>
                            <td>
                                آدرس
                            </td>
                            <td width="115px"></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in organs)
                        {
                            <tr>
                                <td class="organName">@item.Name</td>
                                <td>
                                    @item.Code
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>@item.Address</td>
                                <td>
                                    @Html.ActionLink("ویرایش", "/Index", new { id = item.ID }, new { @class = "btn btn-sm btn-primary" })
                                    @Html.ActionLink("حذف", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
   
<script>
    $('#organSearch').keyup(function () {
        var _filter = $(this).val();
        $('.organName').each(function (i, element) {
            
            if (_filter.length < 1)
                $(this).parent().show()
            else {
                if ($(this).html().indexOf(_filter) >= 0)
                    $(this).parent().show()
                else
                    $(this).parent().hide();
            }

        });
    });
</script>
