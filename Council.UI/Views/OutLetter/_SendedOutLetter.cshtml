@model IEnumerable<Council.Core.Entities.OutLetter>
@using Council.UI.Helpers;
@using Council.Core
@using Microsoft.AspNet.Identity;
@{
    var comNumber = 0;
}

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                <span id="rowNumber">@(++comNumber + Convert.ToInt32(ViewBag.SendedPageNumber))</span>
            </td>
            <td>
                <div>
                    @if (item.ConfirmBoss == false && item.RejectReason != null)
                    {
                        <i class="fa fa-times" style="color:red"></i>
                    }
                    else if (item.ConfirmBoss == true)
                    {
                        <i class="fa fa-check" style="color:green"></i>
                    }

                    @Html.DisplayFor(modelItem => item.Subject)
                </div>
                <input id="SendedOutLetterPageNumber" type="hidden" value="1" />
                <input id="SendedOutLetterCount" type="hidden" value="@ViewBag.SendedOutLetterCount" />
            </td>
            <td>
                @{
                    if (item.Notes.Any())
                    {
                        <a href="javascript:void(0)" onclick="GetOutletterNote('@item.ID')"><span class="fa fa-file" style="color:#5cb85c"></span></a>
                    }
                    else
                    {
                        <span style="color:#c1c1c1" class="fa fa-file"></span>
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutLetterNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutLetterDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reciver)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.RegisterNumber)
            </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.OrginalLetter)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.BoxNumber)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ArchiveCode)
            </td>
            <td>
                @*<a class="btn btn-default addToTabbtn" title="اضافه کردن به فولدر" id="@item.ID" data-toggle="modal" data-target="#addToTab">
                        اضافه در فولدر
                    </a>*@
                <div class="dropdown drp-action">
                    @{
                        var letterIdOfOutLetter = Html.LetterIdOfOutLetter(item.ID);
                    }
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                        <span class="caret"></span>
                        عملیات
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            @Html.ActionLink("بایگانی", "MarkOutLetterAsArchived", new { ID = item.ID }, null)
                        </li>
                        @if (item.ConfirmBoss == false)
                        {
                            <li>
                                @Html.ActionLink("ویرایش", "EditSendLetter", "OutLetter", new { letterID = item.ID }, null)
                            </li>
                        }
                  

                        <li>
                            @Html.ActionLink("نمایش", "DisplaySendLetter", "OutLetter", new { letterID = item.ID }, null)
                        </li>
                        @if (item.ConfirmBoss == true)
                        {

                            <li>
                                @Html.ActionLink("چاپ A5", "SendOutLetterPrintA5", "OutLetter", new { letterId = item.ID, WhitHeader = 2 }, null)
                            </li>
                            <li>
                                @Html.ActionLink("چاپ A4", "SendOutLetterPrintA4", "OutLetter", new { letterId = item.ID }, null)
                            </li>
                            <li>
                                @Html.ActionLink("چاپ A5 با سربرگ", "SendOutLetterPrintA5Header", "OutLetter", new { letterId = item.ID }, null)
                            </li>
                            <li>
                                @Html.ActionLink("چاپ A4 با سربرگ", "SendOutLetterPrintA4Header", "OutLetter", new { letterId = item.ID }, null)
                            </li>
                        }
                        @if (item.ConfirmBoss == false)
                        {
                            <li>
                                @Html.ActionLink("حذف", "DeleteOutLetter", "OutLetter", new { outLetterId = item.ID }, null)
                            </li>
                        }
                    </ul>
                </div>
                @*<a class="btn btn-info" onclick="ShowPrint('@item.ID')" href="javascript:void(0)">چاپ</a>*@
                @*<a class="btn btn-danger" href="@Url.Action("MarkOutLetterAsRemoved", "Letter", new { outLetterID = item.ID })" title="حذف">
                        حذف
                    </a>*@
            </td>
        </tr>
    }
}