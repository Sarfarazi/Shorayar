@model Council.Core.Entities.Draft

@{ViewBag.Title = "نمایش و ویرایش";}

<div class="customDiv">
    @using (Html.BeginForm("Display", "Draft", FormMethod.Post, new { id = "draftDisplayForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID)
        <div class="form-horizontal">
            <h4>پیش نویس</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="form-group">
                @Html.Label("متن", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Content , new {@class= "SampleEditor" })
                    @Html.ValidationMessageFor(model => model.Content)
                </div>
            </div>
            <hr />
            <input type="hidden" name="type" id="type" />
            <input type="hidden" name="OwnerId" id="OwnerId" value="@Model.OwnerId"/>
            <div class="pull-left">
                @{
                    if (Model.OwnerId == ViewBag.UserId)
                    {
                        <button class="btn btn-primary" id="draftToLetterBtn">ایجاد نامه</button>
                    }
                }
            </div>
            <input type="submit" value="ذخیره" class="btn btn-default" />
            @Html.ActionLink("بازگشت", "Index", null, new { @class = "btn btn-danger" })
        </div>
    }
</div>
@section scripts{
    <script src="~/Plugins/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/scripts.js"></script>
}
<script>
    draftDisplayStart();    
</script>