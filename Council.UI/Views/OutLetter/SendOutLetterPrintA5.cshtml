@model Council.Core.Entities.PrintOutLetter
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
        <link href="~/Content/Print/paper.css" rel="stylesheet" />
        <link href="~/Content/PrintA5.css" rel="stylesheet" />
    <style>

        @@font-face {
            font-family: 'BNazaninBold';
            src: url(../../fonts/BNazaninBold.ttf);
            src: url(../../fonts/BNazaninBold.eot?#iefix) format("embedded-opentype"), url(../../fonts/BNazaninBold.woff) format("woff"), url(../../fonts/fdn.fontcdn.ir/Fonts/BNazaninBold.ttf) format("truetype");
            font-weight: 400;
            font-style: normal;
        }

        @@font-face {
            font-family: 'BTitr';
            src: url('../../fonts/BTitrBold.eot');
            src: url('../../fonts/BTitrBold.eot?#iefix') format('embedded-opentype'), url('../../fonts/BTitrBold.woff2') format('woff2'), url('../../fonts/BTitrBold.woff') format('woff'), url('../../fonts/BTitrBold.ttf') format('truetype'), url('../../fonts/BTitrBold.svg#BTitrBold') format('svg');
            font-weight: bold;
            font-style: normal;
            font-display: swap;
        }

        @@font-face {
            font-family: 'Nazanin';
            src: url('../../fonts/Nazanin.eot');
            src: url('../../fonts/Nazanin.eot?#iefix') format('embedded-opentype'), url('../../fonts/Nazanin.woff2') format('woff2'), url('../../fonts/Nazanin.woff') format('woff'), url('../../fonts/Nazanin.ttf') format('truetype'), url('../../fonts/Nazanin.svg#Nazanin') format('svg');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        @@font-face {
            font-family: 'Davat';
            src: url('../../fonts/BDavat.eot');
            src: url('../../fonts/BDavat.eot?#iefix') format('embedded-opentype'), url('../../fonts/BDavat.woff2') format('woff2'), url('../../fonts/BDavat.woff') format('woff'), url('../../fonts/BDavat.ttf') format('truetype'), url('../../fonts/BDavat.svg#BDavat') format('svg');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        html, body {
            height: 100%;
            padding: 0px;
            margin: 0px;
        }

        table, tr, th, td, div {
            font-family: Nazanin;
            font-size: 12px;
        }

        .Detail {
            font-size: 13px;
        }

        .graph-7 {
        }

        .graph-image img {
           
        }
        .ContentLetter p:first-child {
            text-indent: 30px;
            text-align: justify;
        }
        p{
            direction:rtl;
        }
    </style>
</head>
<body>
    <div class="graph-image graph-7" style="height:100%">
        <section class="sheet padding-20mm">
            <div class="print-part">
                <div class="row">
                    <div>
                        <div style="width:50%;float:right;text-align:right">
                            <img src="~/Images/logo/@ViewBag.logo" style="width:85px" />
                        </div>
                        <div style="width:50%;float:right">
                            <div style="float:left;text-align:right;padding-right:7px">
                                <p>
                                    @Model.LetterNumber<br />
                                    @Model.LetterDate<br />
                                    @(Model.UploadCount == "0" ? "ندارد" : "دارد ")<br />
                                </p>
                            </div>
                            <div style="float:left">
                                <p>
                                    شماره  : <br />
                                    تاریخ : <br />
                                    پیوست :<br />

                                </p>
                            </div>
                            <div style="clear:both"></div>
                        </div>
                        <div style="clear:both"></div>
                    </div>
                </div>

                <div class="row text-center " style="padding-top:10px">
                    <p style="text-align:center;font-size:14px">به نام خدا</p>
                </div>
                <div class="row text-right ">
                    <table class="text-right" style="padding-top:10px">
                        <tr>
                            <td height="50" colspan="2" style="text-align: right; padding-right: 30px; padding-left: 30px; font-size: 12px; font-family: BTitr ">
                                از &nbsp;:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <span>شورای شهر میبد</span>
                            </td>
                        </tr>
                        @*<tr>
            <td height="50" colspan="2" style="text-align: right; padding-right: 60px; padding-left: 60px; font-size: 12px; font-family: BTitr ">
                به &nbsp;:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @Model.Reciever
            </td>
        </tr>*@
                        @*<tr>
            <td height="50" colspan="2" style="text-align: right; padding-right: 60px; padding-left: 60px; font-size: 14px">
                <span style="font-size: 12px; font-family: BTitr">موضوع &nbsp;:</span>
                @Model.Subject
            </td>
        </tr>*@
                        <tr>
                            <td height="50" colspan="2" style="text-align: right; padding-right: 30px; padding-left: 30px; font-size: 14px; font-family: BTitr ">
                                @Model.Title1<br />
                                @Model.Title2
                            </td>
                        </tr>

                        
                        <tr>
                            <td colspan="2" style="text-align: right; padding-right: 30px; padding-left: 30px; font-size: 14px;vertical-align:top;line-height:30px">
                                <strong style="font-family: Davat;font-size:14px">سلام علیکم</strong><br />
                                <div class="ContentLetter">
                                    @Html.Raw(Model.Content)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="left">
                                <div style="float:left;width:50%">
                                    <p style="font-family: BTitr; text-align: center; font-size: 12px; line-height: 35px; margin-left: 50px; background-image:url(/Upload/Signature/@Model.SignatureUrl);max-width:200px;background-size:100%;background-repeat:no-repeat">
                                        با سپاس <br />
                                        @Model.BossName <br />
                                        رئیس  شورای اسلامی شهر میبد<br />
                                        <br />

                                    </p>
                                </div>
                                <div style="float:left;width:50%"></div>
                                <div style="clear:both"></div>
                            </td>

                        </tr>
                        <tr>
                            <td colspan="2">
                                <div style="float: right; width: 50%; text-align: right; padding-right: 30px; padding-left: 30px;direction:rtl;font-size:13px;font-style:italic">

                                    @if (Model.CopyTo != null && Model.CopyTo != string.Empty && Model.CopyTo != "<p></p>")
                                    {
                                        <strong>رونوشت:</strong>
                                    }
                                    @Html.Raw(Model.CopyTo)
                                </div>
                                <div style="float:right;width:50%"></div>
                                <div style="clear:both"></div>
                            </td>

                        </tr>
                    </table>
                </div>
            </div>
        </section>
    </div>




</body>
</html>
<script>
    window.print();
</script>
