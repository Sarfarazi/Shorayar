@model IEnumerable<Council.Core.Entities.Meeting>

@{
    ViewBag.Title = "صورت جلسات";
}


<div class="card">
    <div class="card-header">
        صورت جلسات
    </div>
    <div class="card-body">
        <div class="row marginTop10">
            <div class="col-md-9 col-lg-9 col-sm-6 ">
                <a href="~/Meeting/CreateMeeting" class="btn btn-default noRadius marginBottom5 padding10">
                    <i class="glyphicon glyphicon-file"></i>
                    ایجاد صورت جلسه جدید
                </a>
            </div>
            <div class="col-md-3 col-lg-3 col-sm-6">
                <form action="~/Meeting/Search/" method="get">
                    <div class="col-md-3 col-lg-3 col-sm-3 col-xs-6">
                        <div class="input-group search">
                            <input type="text" class="form-control" id="query" name="query" placeholder='فیلتر' required>
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">جستجو</button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>