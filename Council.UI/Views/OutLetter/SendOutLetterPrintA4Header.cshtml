@model Council.Core.Entities.PrintOutLetter
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/Print/paper.css" rel="stylesheet" />
    <link href="~/Content/PrintA4.css" rel="stylesheet" />*@
    <style>


        @@font-face {
            font-family: 'BNazaninBold';
            src: url(../../fonts/BNazaninBold.ttf);
            src: url(../../fonts/BNazaninBold.eot?#iefix) format("embedded-opentype"), url(../../fonts/BNazaninBold.woff) format("woff"), url(../../fonts/fdn.fontcdn.ir/Fonts/BNazaninBold.ttf) format("truetype");
            font-weight: 400;
            font-style: normal;
        }

        @@font-face {
            font-family: 'BTitr';
            src: url('../../fonts/BTitrBold.eot');
            src: url('../../fonts/BTitrBold.eot?#iefix') format('embedded-opentype'), url('../../fonts/BTitrBold.woff2') format('woff2'), url('../../fonts/BTitrBold.woff') format('woff'), url('../../fonts/BTitrBold.ttf') format('truetype'), url('../../fonts/BTitrBold.svg#BTitrBold') format('svg');
            font-weight: bold;
            font-style: normal;
            font-display: swap;
        }

        @@font-face {
            font-family: 'Nazanin';
            src: url('../../fonts/Nazanin.eot');
            src: url('../../fonts/Nazanin.eot?#iefix') format('embedded-opentype'), url('../../fonts/Nazanin.woff2') format('woff2'), url('../../fonts/Nazanin.woff') format('woff'), url('../../fonts/Nazanin.ttf') format('truetype'), url('../../fonts/Nazanin.svg#Nazanin') format('svg');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }
        @@font-face {
            font-family: 'Davat';
            src: url('../../fonts/BDavat.eot');
            src: url('../../fonts/BDavat.eot?#iefix') format('embedded-opentype'), url('../../fonts/BDavat.woff2') format('woff2'), url('../../fonts/BDavat.woff') format('woff'), url('../../fonts/BDavat.ttf') format('truetype'), url('../../fonts/BDavat.svg#BDavat') format('svg');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }
        html, body {
            height: 100%;
            padding:0px;
            margin:0px;
        }
        table, tr, th, td, div {
            font-family: Nazanin;
        }

        .Detail {
            font-size: 20px;
        }
        .graph-7 {
            background-color: white;
            background-image: url('../../Images/Header.jpg');            
            background-size: auto 100%;
            background-repeat: no-repeat;
            background-position: left top;
        }
        .graph-image img {
           
        }
        .ContentLetter p:first-child {
            text-indent: 30px;
            text-align: justify;
            font-size:20px;
            margin-top:0px;
        }
        p {
            direction: rtl;
            font-size: 20px;
        }
    </style>
</head>
<body >
    <div class="graph-image graph-7" style="height:100%">
        <section class="sheet padding-10mm">
            <div class="print-part">
                <div class="row">
                    <table class="table">
                        <tr>
                            <td class="text-right">
                                
                            </td>
                            <td class="text-left marginTop10" style="font-size:16px; padding-top: 40px; padding-left: 50px; text-align: right; line-height: 25px">
                                <div>@Model.LetterNumber</div>
                                <div>@Model.LetterDate</div>
                                <div style="direction:rtl"> @(Model.UploadCount=="0"?"ندارد": "دارد")</div>
                            </td>
                        </tr>
                    </table>
                </div>
               
                
                <div class="row text-right marginTop10">
                    <table class="text-right" style="padding-top:30px">

                        @*<tr>
            <td height="50" colspan="2" style="text-align: right; padding-right: 0px; padding-left: 90px; padding-right: 60px; font-size: 16px; font-family: BTitr ">
                به &nbsp;:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @Model.Reciever
            </td>
        </tr>*@
                        @*<tr>
            <td height="50" colspan="2" style="text-align: right; padding-right: 0px; padding-right: 60px; padding-left: 90px; font-size: 16px;">
                <span style="font-size: 16px; font-family: BTitr">موضوع &nbsp;:</span>
                @Model.Subject
            </td>
        </tr>*@
                        <tr>
                            <td height="50" colspan="2" style="text-align: right; padding-right: 90px; padding-left: 90px; font-size: 18px; font-family: BTitr; line-height: 40px ">
                                <p style="font-size: 18px;">
                                    @Model.Title1<br />
                                    @Model.Title2
                                </p>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align: right; padding-right: 90px; padding-left: 90px; font-size: 20px;vertical-align:top;line-height:40px">
                                <strong style="font-family: Davat;font-size:20px">سلام علیکم</strong><br />
                                <div class="ContentLetter">
                                    @Html.Raw(Model.Content)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="left">
                                <div style="float:left;width:50%;">
                                    <p style="font-family: BTitr; text-align: center; font-size: 18px; line-height: 35px; margin-left: 150px; background-image:url(/Upload/Signature/@Model.SignatureUrl);max-width:200px;background-size:100%;background-repeat:no-repeat">
                                        با سپاس <br />
                                        @Model.BossName <br />
                                        رئیس  شورای اسلامی شهر میبد<br />
                                        <br />
                                       
                                    </p>
                                </div>
                                <div style="float:left;width:50%"></div>
                                <div style="clear:both"></div>
                            </td>

                        </tr>
                        <tr>
                            <td colspan="2">
                                <div style="float: right; width: 50%; text-align: right; padding-right: 60px; padding-left: 60px;direction:rtl;font-size:14px;font-style:italic">

                                    @if (Model.CopyTo != null && Model.CopyTo != string.Empty && Model.CopyTo != "<p></p>")
                                    {
                                        <strong>رونوشت:</strong>
                                    }
                                    @Html.Raw(Model.CopyTo)
                                </div>
                                <div style="float:right;width:50%"></div>
                                <div style="clear:both"></div>
                            </td>

                        </tr>
                    </table>
                </div>
            </div>
        </section>
    </div>

    
    
    
</body>
</html>
<script>
        window.print();
</script>